<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>
<h5>Empleados: </h5>
<ul>

  <% @company.employees.each do |employee| %>
    <li>Empleado: <%= employee.firs_name%> <%= employee.last_name%> - email: <%= employee.email %>  - area: <%= employee.area.name%>
      <%= link_to 'x', company_employee_path(@company, employee), method: :delete  %>
    </li>


  <% end %>
</ul>

<%= form_with(model: [ @company, @employee ]) do |form| %>
  <div class="form-group">
    <%= form.label :firs_name, "First Name" %>
    <%= form.text_field :firs_name , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.select :area_id, Area.pluck(:name, :id) %>
  </div>

  <div class="float-right">
    <%= form.submit "Guardar", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>


<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
