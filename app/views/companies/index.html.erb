<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td>  <%= link_to company do %> <%= company.name %>   <% end %></td>
        <td><%= company.employees.count %></td>
        <td><%= link_to 'Show', company, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: 'btn btn-success' %>
